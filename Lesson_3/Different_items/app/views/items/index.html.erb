<h1>All items</h1>

<% if @items.empty? %>
    <p>No one items here</p>
<% else %>

<table>
  	<thead>
		<th>Name</th>
		<th>Weight</th>
		<th>Description</th>
	</thead>

	<tbody>
		<% @items.each do |item| %>
            
            <tr>
            	<td><%= link_to item.name, item %></td>
            	<td><%= item.weight %></td>
            	<td><%= item.description %></td>
            </tr>

		<% end %>
	</tbody>
</table>

<% end %>

<%= link_to 'Add new item', new_item_path %>