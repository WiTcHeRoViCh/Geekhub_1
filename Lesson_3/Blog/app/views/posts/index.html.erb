<% if @posts.empty?%>
    <p>No one post here</p>
<% end %>    

<table>
	<thead>
		<th>Post name</th>
		<th>Words</th>
	</thead>

	<tbody>
		<% @posts.each do |post|%>
            <tr>
            	<td><%= post.name %></td>
            	<td><%= post.words %></td>
            	<td><%= link_to 'Destroy', post, method: :delete %></td>
            </tr>
		<%end%>
	</tbody>
</table>