<h1>Sign up</h1>

<%= form_for @user do |f| %>
  
  <p><%= f.label('Name') %></p>
  <%= f.text_field :name %>

  <p><%= f.label('Email') %></p>
  <%= f.email_field :email %>

  <p><%= f.label('Password') %></p>
  <%= f.password_field :password %>

  <p><%= f.label('Password confirmation') %></p>
  <%= f.password_field :password_confirmation %>

  <p><%= f.submit 'Sign up' %></p>

<% end %>	
<%= link_to 'Sign in', sign_in_path %>