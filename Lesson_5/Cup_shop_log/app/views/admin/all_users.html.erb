<h1>All users</h1>

<table>
	<thead>
		<th>Name</th>
		<th>Email</th>
		<th>Admin</th>
	</thead>

	<tbody>
		
    <% users_all.each do |u| %>
      
      <tr>
        <% if u == current_user %>
          <td><span style="color: red">*</span> <%= u.name%></td>
        <% else %>  
      	  <td><%= u.name%></td>
      	<% end %>  
      	<td><%= u.email %></td>
      	<td><%= u.admin %></td>
      	<td><%= link_to 'Edit', edit_admin_user_path(u) %></td>
      	<td><%= link_to 'Destroy', u, method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>

    <% end %>  
    
	</tbody>
</table>



