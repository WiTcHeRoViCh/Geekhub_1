<h1>All items</h1>
<% if @items.empty? %>
  <h1>No one item find</h1>
<% else %>

  <table>
  	<thead>
  		<th>Name</th>
  		<th>Price</th>	
  	</thead>

  	<tbody>
  		<% @items.each do |item| %>
        <tr>

          <td><%= link_to item.name, [@user, item] %></td>
          <td><%= item.price %></td>

        </tr>
  		<% end %>
  	</tbody>
  </table>

<% end %>  

<p><%= link_to 'New item', new_item_path %></p>
<p><%= link_to 'Users path', users_path %></p>
